<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.caesar84mx.marvelheroes">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.caesar84mx.marvelheroes.common.app.MarvelHeroesApp"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/MarvelHeroesAppTheme">
        <activity
            android:name="com.caesar84mx.marvelheroes.common.app.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>